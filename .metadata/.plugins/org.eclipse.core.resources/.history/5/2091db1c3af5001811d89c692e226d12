package LinearList;

/**
 * 链表(链表本身有序)去重 场景分为： 
 *       1）保留重复元素第一次出现的元素，删除其他重复元素
 *       2）删除所有重复数据
 * 
 * @author xubing
 *
 */
public class LinkedUnique {


    public static Node delDuplicateElementButSaveFirst(Node node) {

        if (node == null || node.next == null) {
            return node;
        }

        Node pCur = node;
        Node pNext = null;

        while (pCur.next != null) {
            pNext = pCur.next;
            if (pCur.data == pNext.data) {
                // delete pNext node
                Node tmp = pNext;
                pCur.next = pNext.next;
                tmp.next = null;
            } else {
                pCur = pNext;
            }

        }

        return null;
    }

    public static Node delAllDuplicateElement(Node node) {
        return null;
    }

    public static void main(String[] args) {
        // TODO Auto-generated method stub
        int [] arr = {1,2,2,2,3,3,4,5,6,6,7};
        Node list = ListUtils.initNodeList(arr);
        ListUtils.printList(list);
    }

}
