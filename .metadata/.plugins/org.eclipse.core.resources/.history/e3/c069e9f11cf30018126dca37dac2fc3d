package LinearList;

/**
 * 翻转链表： 输入：给定从m到n位置翻转(m <= n)
 * 
 * @author xubing
 *
 */
public class ReverseList {


    public static Node reverseList(Node node, int fromIndex, int toIndex) {

        // 找到聊表n-1的位置
        Node pre = node;
        int i = 0;
        for (; i < fromIndex; i++) {
            pre = pre.next;
        }

        Node pNext = null;
        Node pCur = null;
        
        toIndex--;
        // 将pre后续节点依次遍历toIndex - fromIndex差值个数元素，采用头插法依次插入
        while (i++ < toIndex) {
            
            pNext = pre.next;
            pCur = pNext.next;
            //采用头插法插入数据
            pNext.next = pCur.next;
            pCur.next = pNext;
            pre.next = pCur;
            pCur = pNext.next;
        }

        return node;
    }


    public static void main(String[] args) {
        Node node = ListUtils.initNodeList(10);
        
        ListUtils.printList(node);

        // 指定从3到5开始翻转
        ReverseList.reverseList(node, 3, 7);
        
        ListUtils.printList(node);
    }
}
