package LinearList;

/**
 *  判断链表是否有环，使用快慢指针，同时也可以使用快慢指针找链表的中点
 * @author xubing
 *
 */

public class LinkedHasRing {
    
    public static boolean isRing(Node list) {
        
        boolean result = false;
        if(list == null || list.next == null) {
            return false;
        }
        
        Node slow = list;
        Node fast = list;
        
        while(fast.next != null && fast.next.next != null) {
            slow = slow.next;
            fast = fast.next.next;
            
            if(slow == fast) {
                result = true;
                break;
            }
        }
        
        return result;
    }

    public static void main(String[] args) {
        // TODO Auto-generated method stub
        int [] nodeData = {1,2,3,4,5,6,7,8,9}; 
        Node list = ListUtils.initNodeListHavaRing(nodeData);
        boolean result = LinkedHasRing.isRing(list);
        System.out.println("result:"+result);
    }

}
